                    android:id="@+id/checkBox_4"
                    style="@style/CheckBox_channel_control_switchItem">
                </com.yylx.hearingaid.views.checkbox.CheckBox>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_channel_control_vertical">

            <LinearLayout
                style="@style/LinearLayout_channel_control_switchItem">

                <TextView
                    style="@style/TextView_channel_control_switchItem"
                    android:text="5:"/>

                <com.yylx.hearingaid.views.checkbox.CheckBox
                    android:id="@+id/checkBox_5"
