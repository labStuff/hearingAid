<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- bottom bar start -->
    <style name="TextView_bottom_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_400</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FrameLayout_bottom_bar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="View_divide_line">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/divide_line</item>
    </style>
    <!-- bottom bar end -->

    <!-- loudCom fragment start -->
    <style name="LinearLayout_channel_control_vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinearLayout_channel_control_switchItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="TextView_channel_control_switchItem">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CheckBox_channel_control_switchItem">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:checked">true</item>
        <item name="android:enabled">true</item>
    </style>
    <!-- loudCom fragment end -->
</resources>
